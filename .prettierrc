{
	"singleQuote": true,
	"trailingComma": "es5",
	"tabWidth": 3,
	"useTabs": true,
	"semi": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"endOfLine": "lf",

	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrderSeparation": true,
	"importOrderCaseInsensitive": true,
	"importOrderParserPlugins": [
		"classProperties",
		"decorators-legacy",
		"typescript"
	],
	"importOrder": ["<THIRD_PARTY_MODULES>", "^@/(.*)$", "^../(.*)", "^./(.*)"]
}
